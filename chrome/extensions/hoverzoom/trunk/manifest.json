{
    "name": "Hover Zoom",
    "version": "0.1",
    "description": "Display full size image when the mouse hovers a link.",
    "content_scripts": [
        {
			"matches": ["http://*/*"],
			"css": ["hoverzoom.css"],
            "js": ["jquery.min.js", "hoverzoom.js"],
			"all_frames": true
        },
        {
			"matches": ["http://*/*"],
            "js": ["plugins/default.js"],
			"run_at": "document_start"
        },
        {
			"matches": ["http://www.facebook.com/*"],
            "js": ["plugins/facebook.js"],
			"run_at": "document_start"
        },
        {
			"matches": ["http://www.flickr.com/*"],
            "js": ["plugins/flickr.js"],
			"run_at": "document_start"
        } 
	]
}